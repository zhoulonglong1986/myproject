<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bag"
    android:orientation="vertical"
    tools:context=".MainActivity" >

   <!-- 标题部分 （logo 天气预报） -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:visibility="visible" >
       <!-- logo） -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/logo3" />
          <!-- 天气预报-->
        <LinearLayout 
            android:id="@+id/ll_tanqin"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="160dp"
            android:orientation="horizontal">
            
            <TextView 
               android:id="@+id/tv_week"
                android:text="星期二"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_gravity="bottom"
                android:textColor="@color/tanqin"/>
            
            <ImageView 
                android:id="@+id/iv_tanqin"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:src="@drawable/s_1"/>
            <TextView 
                android:id="@+id/tv_wendu"
                android:text="23-26℃"
                android:textSize="40sp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/tanqin"/>
            <LinearLayout 
                android:id="@+id/ll_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">
                
                <ImageView 
                
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                
                android:src="@drawable/wifi"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="网络连接断开!"
                    android:textSize="20sp"
                    android:textColor="@color/red"/>
                
            </LinearLayout>
           
            
        </LinearLayout>

        <!-- 横线部分 -->
        <ImageView
            android:layout_width="1756dp"
            android:layout_height="3dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/line" />
        
       
    </RelativeLayout>
    
     <!-- 标题部分 结束-->
     
     <!-- 主体部分 开始-->      
